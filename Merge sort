#include<stdio.h>
void display(int arr[20],int l,int n){
	printf("Pass: ");
	for (int i= l; i<=n; i++){
		printf("%d ", arr[i]);
	}
printf("\n");
}
void merge(int arr[20],int l,int m,int r){
	int n1= m-l+1;
	int n2 = r-m;
	int left[n1], right[n2];
	for (int i= 0; i<n1;i++)
		left[i] = arr[l+i];
	for (int j=0;j<n2;j++){
		right[j]=arr[m+1+j];
		}

	int i= 0, j = 0 , k = l;
	while (i<n1 && j<n2){
		if(left[i]<= right[j])
		arr[k++] = left[i++];
		else
			arr[k++]= right[j++];
	}
	while (i<n1)
		arr[k++]= left[i++];
	while (j<n2)
		arr[k++]= right[j++];
	display(arr,l,r);
	}
void mergesort(int arr[],int l, int r){
	if(l<r){
		int m = l+(r-l)/2;
		mergesort(arr,l,m);
		mergesort(arr, m+1,r);
}
